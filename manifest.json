{
  "manifest_version": 3,
  "name": "Xnay: X Content Filter",
  "version": "1.0",
  "description": "Hides violent content on X.",
  "permissions": ["activeTab", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": ["*://*.x.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
